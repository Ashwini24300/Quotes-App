
<!DOCTYPE html>

<html>
<head>
    <title>AllQuotesDashboard</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <center>

        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/"><b>Quotes Application</b></a>
                    <a class="navbar-brand" href="">About</a>
                    <a class="btn btn-primary" style="background-color:lightcoral" href="/Quotes/AddQuotes">Add Quote</a>
                    <a class="btn btn-primary" style="background-color:coral" href="/User/Profile">PROFILE</a>
                    <a class="btn btn-primary" style="background-color:lightcoral" href="/User/SignOut/">LOGOUT</a>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <h1 class="alert-info" style="width:75%;height:60px">ALL QUOTES DASHBOARD</h1>
            <table class="table table-hover" style="width: 75%">
                @foreach (QuotesApplivcation.Models.Quote quote in Model)
                {
                    <tr>
                        <td>@quote.text</td>
                        <td style="text-align: center">@quote.author</td>
                        <td><a href="/Quotes/LikeQuotes/@quote.Id" class="btn btn-success" value="LIKE">LIKE</a></td>
                        <td><a href="/Quotes/EditQuotes/@quote.Id" class="btn btn-info">EDIT</a></td>
                        <td><a href="/Quotes/DeleteQuotes/@quote.Id" class="btn btn-danger">DELETE</a></td>
                    </tr>
                }
            </table>

            <div class="alert alert-warning">@Model</div>
        </div>

    </center>
</body>
</html>
