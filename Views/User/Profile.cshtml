
<!DOCTYPE html>

<html>
<head>
    <title>USER PROFILE</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>

<body>
    <center>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">Quotes Application</a>
                    <a class="btn btn-primary" style="background-color:coral" href="/Quotes/AddQuotes">Add Quote</a>
                    <a class="btn btn-primary" style="background-color:coral" href="/User/ChangePwd">CHANGE PASSWORD</a>
                    <a class="btn btn-primary" style="background-color:coral" href="/User/SignOut/">LOGOUT</a>
                </div>
            </div>
        </div>
        
        <div class="table-responsive">
            <h1 class="alert-info" style="width:75%;height:60px">PROFILE DETAILS</h1>
            <form action="/User/Profile" method="post">
                <table class="table table-hover" style="width: 75%">
                    @* Hidden Fields  *@
                    <tr>
                        <td><input type="hidden" value="@Model.Id" name="Id" /></td>
                    </tr>
                    <tr>
                        <td><input type="hidden" value="@Model.password" name="password" /></td>
                    </tr>

                    @* Displayable Fields  *@
                    <tr>
                        <td>FIRST NAME :</td>
                        <td><input type="text" value="@Model.first_name" name="first_name" /></td>
                    </tr>
                    <tr>
                        <td>LAST NAME :</td>
                        <td><input type="text" value="@Model.last_name" name="last_name" /></td>
                    </tr>
                    <tr>
                        <td>EMAIL :</td>
                        <td><input type="email" value="@Model.email" name="email" /></td>
                    </tr>
                    <tr>
                        <td>MOBILE :</td>
                        <td><input type="text" value="@Model.mobile" name="mobile" /></td>
                    </tr>
                    <tr>
                        <td colspan="2"><input class="btn btn-info" type="submit" value="UPDATE RECORD"/></td>
                    </tr>
                </table>
            </form>
        </div>

    </center>
</body>
</html>
